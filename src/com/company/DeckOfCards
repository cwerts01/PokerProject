package com.company;

import java.util.ArrayList;

public class DeckOfCards {
    ArrayList<Card> deck = new ArrayList<>();

    private DeckOfCards instance = new DeckOfCards();

    private void createDeck(){
        deck.clear();
        for (int i=0;i<4;i++){
            for(int j = 0; j<13; j++) {
                Card newCard = new Card(Card.getSuits().get(i), j+2);
                deck.add(newCard);
            }

        }
    }

    public void shuffleDeck() {

    }

    public DeckOfCards getInstance() {
        return instance;
    }

    private DeckOfCards() {
        this.createDeck();
    }
}